{
  "name": "@repo/next-tailwind2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev -p 4001\" \"npm run compile-typescript\" \"npm run compile-styles\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "compile-typescript": "tsc -p tsconfig.build.json --watch",
    "compile-styles": "tailwindcss -i src/components/index.css -o myDist/index.css --watch"
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18",
    "next": "14.2.15"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.15"
  }
}
