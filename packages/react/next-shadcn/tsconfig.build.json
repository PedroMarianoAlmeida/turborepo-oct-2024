{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "myDist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "noEmit": false,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules", "dist", "build", ".next"]
}
